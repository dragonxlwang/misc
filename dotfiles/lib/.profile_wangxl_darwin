#        .___________.    ___           _______. __  ___      _______.         #
#        |           |   /   \         /       ||  |/  /     /       |         #
#        `---|  |----`  /  ^  \       |   (----`|  '  /     |   (----`         #
#            |  |      /  /_\  \       \   \    |    <       \   \             #
#            |  |     /  _____  \  .----)   |   |  .  \  .----)   |            #
#            |__|    /__/     \__\ |_______/    |__|\__\ |_______/             #
## ========================================================================== ##
function _smart_ssh {
  local is_inside_tmux=$1
  local t_host=$2
  if [[ $is_inside_tmux -eq 1 ]]; then
    # login shell: bash_profile directs to zsh
    ssh $t_host
  else
    # non-login shell: bashrc only add paths
    ssh $t_host -t 'tmux new -AD -s $(hostname -s)-main'
  fi
}

function _list_task {
  local caller_is_profile=$1
  local is_inside_tmux=0
  [[ -n "$TMUX" ]] && is_inside_tmux=1
  local option=$2
  # finish if called from profile and inside tmux
  [[ $caller_is_profile -eq 1 && $is_inside_tmux -eq 1 ]]  && return
  # main loop
  while [[ -z $option ]]
  do
    redecho "Following starting options are available:"
    cyanecho "  (1)   :   ssh timan101"
    cyanecho "  (2)   :   ssh timan102"
    cyanecho "  (3)   :   ssh timan103"
    cyanecho "  (4/t) :   tmux new -AD -s $(hostname -s)-main"
    cyanecho "  (5/n) :   zsh"
    cyanecho "  (6)   :   ssh mac_mini"
    cyanecho "  (7)   :   mosh dev"
    whiteecho $(printf '=%.0s' {1..50})
    yellowecho -n "Select One Option From (1) - (6): "
    read option
    if [[ $option == 1* ]]; then option=1
    elif [[ $option == 2* ]]; then option=2
    elif [[ $option == 3* ]]; then option=3
    elif [[ $option == 4* || $option == t* ]]; then option=4
    elif [[ $option == 5* || $option == n* ]]; then option=5
    elif [[ $option == 6* ]]; then option=6
    elif [[ $option == 7* ]]; then option=7
    else redecho "  Input Not Recognized..."
    fi
  done
  whiteecho $(printf '=%.0s' {1..50})
  greenecho "caller_is_profile  :  $caller_is_profile"
  greenecho "is_inside_tmux     :  $is_inside_tmux"
  greenecho "option             : (${option})"
  if [[ $option -eq 1 ]]; then
    redecho "  (1)	:   ssh timan101"
    _smart_ssh $is_inside_tmux timan101
  elif [[ $option -eq 2 ]]; then
    redecho "  (2)	:   ssh timan102"
    _smart_ssh $is_inside_tmux timan102
  elif [[ $option -eq 3 ]]; then
    redecho "  (3)	:   ssh timan103"
    _smart_ssh $is_inside_tmux timan103
  elif [[ $option -eq 4 ]]; then
    redecho "  (4)	:   tmux new -AD -s $(hostname -s)-main"
    [[ $is_inside_tmux -eq 1 ]] && redecho "already in tmux" || \
      tmux new -AD -s $(hostname -s)-main
  elif [[ $option -eq 5 ]]; then
    redecho "  (5)	:   zsh"
  elif [[ $option -eq 6 ]]; then
    redecho "  (6)	:   ssh mac_mini"
    ssh mac_mini
  elif [[ $option -eq 7 ]]; then
    redecho "  (7)	:   mosh dev"
    mosh dev
  fi
}

alias lt="_list_task 0"
[[ -t 1 ]] && _list_task 1
