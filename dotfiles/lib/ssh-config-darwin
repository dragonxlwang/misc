# default config read from /usr/local/etc/ssh/ssh_config, which should be
# /etc/ssh/ssh_config.
#
# Generated by Chef.
# Local modifications will be overwritten.

Match host hg.vip.facebook.com,*git.vip.facebook.com,git-ro.vip.facebook.com,svn.vip.facebook.com,cfgate.vip.facebook.com
	ForwardAgent no
	PreferredAuthentications publickey,gssapi-with-mic,password
	SendEnv FB_GIT_WRAPPER

Match host ash-shell*,snc-shell*,sin-shell*,lhr-shell*,ams-shell*,shell,shell.thefacebook.com,ash-elysium*,snc-elysium*,snc-onnajmp*,ash-onnajmp*,snc-hanzojmp*,ash-hanzojmp*
	CanonicalDomains thefacebook.com
	CanonicalizeHostname yes

Match host *-arvrusr*,*-fbuser*,*-fbgrid-*,*-arvrgrid-*,*-*clustermanager*,*-fbedae*,*-arvredae*,*-arvrdzv*,*-fbdzv*
	CanonicalDomains thefacebook.com
	CanonicalizeHostname yes

Match host *.od,*.sb
	HostName %h.fbinfra.net

Match host *.od.fbinfra.net
	ForwardAgent no
	GSSAPIAuthentication no
	StrictHostKeyChecking no
	User svcscm
	UserKnownHostsFile /dev/null

Match host *.nexus
	HostName %h.fbinfra.net

Match host *.nexus.fbinfra.net
	GSSAPIAuthentication no
	StrictHostKeyChecking no
	UserKnownHostsFile /dev/null

Match host *.facebook.com,*.thefacebook.com,*.fbinfra.net,dev,dev*
	Ciphers aes128-gcm@openssh.com,aes256-gcm@openssh.com,aes128-ctr,aes192-ctr,aes256-ctr
	ForwardAgent yes
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials no
	IPQoS af31 af12
	IdentityAgent /Users/xlwang/.fb-sks-agent/agent.sock
	IdentityFile /Users/xlwang/.fb-sks-agent/xlwang-cert.pub
	MACs hmac-sha2-256-etm@openssh.com,hmac-sha2-512-etm@openssh.com,hmac-sha2-256,hmac-sha2-512
	PreferredAuthentications publickey,keyboard-interactive,gssapi-with-mic,password
	ProxyCommand x2ssh -fallback -tunnel %h
	PubkeyAcceptedKeyTypes ecdsa-sha2-nistp256-cert-v01@openssh.com,ecdsa-sha2-nistp384-cert-v01@openssh.com,ecdsa-sha2-nistp521-cert-v01@openssh.com,ssh-ed25519-cert-v01@openssh.com,rsa-sha2-512-cert-v01@openssh.com,rsa-sha2-256-cert-v01@openssh.com,rsa-sha2-512
	PubkeyAuthentication yes

Match all
	SendEnv LANG LC_*
	ServerAliveCountMax 6
	ServerAliveInterval 15
