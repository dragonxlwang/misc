#!/bin/sh

function yellowecho {
    echo -e "\033[1;33m${1}\033[0m"
}
function blueecho {
    echo -e "\033[1;36m${1}\033[0m"
}
function redecho {
    echo -e "\033[1;31m${1}\033[0m"
}


# boost library
export BOOST_ROOT="${HOME}/local/boost"
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/home/xwang95/local/boost:/home/xwang95/local/boost/lib
export PATH=$PATH:/home/xwang95/local:/home/xwang95/resource/vowpal_wabbit
# go to work
alias go_work="cd ~/workspace/src; screen"

# utility
alias clean_chrome_session="mv --verbose -f --backup=numbered --target-directory ~/.trash/ /home/xwang95/.config/google-chrome/SingletonLock"
function clean_nx_sessions {
    SESSION_PATHS=`find /tmp/nx/xwang95/.nx/ -maxdepth 1 -type d -user $USER`
    for SESSION in $SESSION_PATHS
    do
	echo rm  $SESSION
	rm  $SESSION
    done
}
alias clean_chrome_profile="/bin/rm -rf /home/xwang95/.config/google-chrome/Default"
alias killall="killall -u xwang95"
alias dir_size='for f in $("ls"); do du -lsh $f; done;'
function from_backup {
    wget sifaka.cs.uiuc.edu/~xwang95/backup/$1
}
function to_backup {
    scp $1 xwang95@timan100.cs.uiuc.edu:~/public_html/backup/
}
function from_content {
    wget sifaka.cs.uiuc.edu/~xwang95/content/$1
}
function to_content {
    scp $1 xwang95@timan100.cs.uiuc.edu:~/public_html/content/
}
function from_local {
